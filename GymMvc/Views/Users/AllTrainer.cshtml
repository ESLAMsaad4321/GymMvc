@using GymMvc.Setting;
@model IEnumerable<Information>
@if (!Model.Any())
{
    <div class="alert  alert-warning">
        <h4 class="alert-heading">No Trainer!</h4>
        <p class="mb-0">No Treainer Were Added Yet.</p>
    </div>
}
else
{
    <a href="##" onClick="history.go(-1); return false;"> Return to Your Page</a>
    <div class=" mt-5">
        <table class="table table-bordered border-primary">
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="border-1 border-success">
                        <td>
                            <div class="d-flex">
                                <div class="pe-4">
                                    <img src="@($"{FileSetting.imagepath}/{item.Image}")" alt="@item.Name" style="max-width:150px">
                                </div>
                                <div class="d-flex flex-column justify-content-center">
                                    <h4 class="text-bg-light text-lg-center">@item.Name</h4>
                                    <span class="badge bg-info fs-5 mb-4">Trainer</span>
                                    <p class="fs-5">Phone Number=>@item.Phone_Number</p>
                                    <p class="fs-5">Age=>@item.Age</p>
                                    <p class="fs-5">Height=>@item.Height</p>
                                    <p class="fs-5">Weight=>@item.Weight</p>
                                    <p class="fs-5">Small Description=>@item.Description</p>
                                    <div class="d-flex justify-content-bottom">
                                        <a class="btn btn-info rounded rounded-3 me-2" asp-controller="Schedule" asp-action="Schedule" asp-route-id="@item.Id">
                                            <i class="bi bi-table"></i>
                                        </a>
                                    </div>

                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
