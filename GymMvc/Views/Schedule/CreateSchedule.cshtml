@model GymMvc.Model_View.CreateSchedule
<h5>
    <i class="bi bi-plus-circle-dotted"></i>
    Add A New Schedule
</h5>
<form asp-controller="Schedule" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Day" class="form-label mt-4"></label>
                <input type="text" class="form-control" asp-for="Day" placeholder="Name">
                <span asp-validation-for="Day" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectWorkOut" class="form-label mt-4"></label>
                <select class="form-select" asp-for="SelectWorkOut" asp-items="Model.WorkOuts"
                        data-placeholder="Select WorkOuts">
                    <option></option>
                </select>
                <span asp-validation-for="SelectWorkOut" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-light text-black mt-4">Save</button>
            <a href="##" onClick="history.go(-1); return false;"> Return to Trainer Page</a>

        </div>
    </div>
</form>
<div>
</div>
